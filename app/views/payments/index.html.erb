                                            <td> <%= link_to 'pay', payment_update_path(house.id), :method => :patch, class: 'btn btn-lg btn-success btn-block' %> </td>
                                            </tr>
                                            <% count = count + 1 %>
                                        <% end %>
                                    </tbody>
                                </table>                            
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Grocery
